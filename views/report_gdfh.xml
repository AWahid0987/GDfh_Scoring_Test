<odoo>
    <record id="action_report_gdfh_result" model="ir.actions.report">
        <field name="name">GDfH Result Report</field>
        <field name="model">gdfh.result</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">gdfh_scoring_test.report_gdfh_result_template</field>
        <field name="report_file">gdfh_scoring_test.report_gdfh_result_template</field>
        <field name="print_report_name">'GDfH_Result_%s' % (object.name)</field>
    </record>

    <template id="report_gdfh_result_template">
        <t t-call="web.basic_layout">
            <t t-set="doc" t-value="docs[0]" />
            <t t-set="company" t-value="res_company"/>
            <div class="page">
                <table width="100%" style="margin-bottom: 10px;">
                    <tr>
                        <td align="left" style="width: 50%;">
                            <h2><t t-esc="company.name" /></h2>
                        </td>
                        <td align="right" style="width: 50%;">
                            <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % (company.logo)" style="height: 100px;" />
                        </td>
                    </tr>
                </table>

                <h2>GDfH Scoring Test Result</h2>

                <table width="100%" style="border: 1px solid #000; padding: 10px;">
                    <tr style="background-color: #fff; font-weight: bold;">
                        <td style="border: 1px solid #000; padding: 5px;"><strong>Name</strong></td>
                        <td style="border: 1px solid #000; padding: 5px;"><strong>Email</strong></td>
                        <td style="border: 1px solid #000; padding: 5px;"><strong>Country</strong></td>
                        <td colspan="3" style="border: 1px solid #000; padding: 5px;"><strong>Global Awareness</strong></td>
                        <td colspan="3" style="border: 1px solid #000; padding: 5px;"><strong>Active Civic Participation</strong></td>
                        <td colspan="3" style="border: 1px solid #000; padding: 5px;"><strong>Environment Protection</strong></td>
                        <td colspan="3" style="border: 1px solid #000; padding: 5px;"><strong>Ethical Consumption</strong></td>
                        <td colspan="3" style="border: 1px solid #000; padding: 5px;"><strong>Peace and Conflict Management</strong></td>
                        <td colspan="3" style="border: 1px solid #000; padding: 5px;"><strong>Intercultural Competence</strong></td>
                        <td style="border: 1px solid #000; padding: 5px;"><strong>Score</strong></td>
                        <td style="border: 1px solid #000; padding: 5px;"><strong>Level</strong></td>
                        <td style="border: 1px solid #000; padding: 5px;"><strong>Submitted Date</strong></td>
                    </tr>
                    <tr style="background-color: #f0f0f0;">
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.name" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.email" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.country" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_1" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_2" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_3" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_4" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_5" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_6" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_7" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_8" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_9" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_10" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_11" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_12" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_13" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_14" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_15" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_16" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_17" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.score_18" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.total_score" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.level" /></td>
                        <td style="border: 1px solid #000; padding: 5px;"><t t-esc="doc.submitted_on" /></td>
                    </tr>
                </table>
            </div>
        </t>
    </template>
</odoo>
